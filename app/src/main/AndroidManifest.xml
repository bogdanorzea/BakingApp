<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bogdanorzea.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BakingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".data.network.RecipesSyncIntentService" />

        <activity
            android:name=".ui.detail.recipe.RecipeActivity"
            android:label="@string/title_activity_detail"
            android:launchMode="singleTask"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogdanorzea.bakingapp.ui.main.MainActivity" />
        </activity>
        <activity
            android:name=".ui.detail.step.StepActivity"
            android:label="@string/title_activity_step"
            android:launchMode="singleTask"
            android:parentActivityName=".ui.detail.recipe.RecipeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bogdanorzea.bakingapp.ui.detail.recipe.RecipeActivity" />
        </activity>
    </application>

</manifest>